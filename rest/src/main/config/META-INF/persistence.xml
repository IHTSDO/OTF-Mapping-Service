<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
    xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <!--  use transaction-type RESOURCE_LOCAL because we do not have a container -->
    <persistence-unit name="MappingServiceDS" transaction-type="RESOURCE_LOCAL">
    
        <!-- JPA persistence provider. -->
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <!-- List managed classes -->
        ${managed.classes.list}      
        
        <properties>
        
            <!-- Log formatted Hibernate SQL with comments.
            -->
            <property name="hibernate.show_sql" value="${show.sql}" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.use_sql_comments" value="true" />
            
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>

            <property name="hibernate.search.default.directory_provider"
              value="filesystem" />
            <property name="hibernate.search.default.indexBase" value="${user.home}/mapping/lucene/indexes" />
            <property name="hibernate.search.lucene_version" value="LUCENE_36" />

            <!-- JDBC properties. -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="${mysql.main.url}" />
            <property name="javax.persistence.jdbc.user" value="${mysql.main.user}" />
            <property name="javax.persistence.jdbc.password" value="${mysql.main.pwd}" />

        </properties>
    </persistence-unit>
</persistence>
